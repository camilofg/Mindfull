<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MIndFull.Views.CreateUser">
  <ContentPage.Content>
    <StackLayout Padding="10,30,10,10" Spacing="10">
      <!--<StackLayout.BackgroundColor>
          <OnPlatform x:TypeArguments="Color" Android="#FFFFFF" WinPhone="#51C0D4" iOS="#51C0D4"></OnPlatform>
      </StackLayout.BackgroundColor>-->
      <Image x:Name="IconLogo"
             HorizontalOptions="Center"
             VerticalOptions="Center"/>
      <Label Text="MINDFULL"
             Font="30"
             HorizontalOptions="Center"
             VerticalOptions="Center"/>
      <Label Text="User Creation"
             HorizontalOptions="Center"
             VerticalOptions="Center"/>
      <ActivityIndicator x:Name="waitActivityIndicator"
             HorizontalOptions="Center"
             VerticalOptions="Center"/>
      <Label Text="*Email:"
            HorizontalOptions="Start"
            VerticalOptions="Center"/>
      <Entry x:Name="TxtEmail"
             Placeholder="Email"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="Center"
             Keyboard="Email"/>
      <Label Text="*Password:"
            HorizontalOptions="Start"
            VerticalOptions="Center"/>
      <Entry x:Name="TxtPass"
             Placeholder="Password"
             IsPassword="True"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="Center"/>
      <Label Text="Telephone:"
            HorizontalOptions="Start"
            VerticalOptions="Center"/>
      <Entry x:Name="TxtPhone"
             Placeholder="Phone Number"
             Keyboard="Numeric"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="Center"/>
      <Label Text="* Fields required"
              HorizontalOptions="Start"
              VerticalOptions="Center"/>
      <Button x:Name="BtnCreate"
              BackgroundColor="Navy"
              TextColor="White"
              Text="Create User"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="Center"
              Clicked="BtnCreate_Clicked"/>
    </StackLayout>
  </ContentPage.Content>
